<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/darker_gray" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:centerX="50%"
                android:centerY="50%"
                android:endColor="#c99dea"
                android:startColor="#f6f3ff"
                android:type="linear" />

            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>